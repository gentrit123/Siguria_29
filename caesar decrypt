//Dekriptimi me komanden caesar

#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;


string dekriptimi(string teksti,int qelesi)
{
    string rezultati="";
    
    for(int i=0;i<teksti.length();i++)
    {
    
       if(isupper(teksti[i]))
         rezultati+= char(int(teksti[i]-qelesi-65)%26+65);
         
       else if(islower(teksti[i]))
         rezultati+=char(int(teksti[i]-qelesi-97)%26+97);
         
       else if(teksti[i]<65)
         rezultati+=teksti[i];
         
       else
         rezultati+=" ";
         
    }
    return rezultati;
}
