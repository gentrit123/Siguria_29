import sys
import os

class BealsCipher:
    def __init__(self):
        choose_function = input("Enter e to encode or d to decode:")
        if(choose_function.lower() == 'e'):
            self.encoder()
        elif(choose_function.lower() == 'd'):
            self.decoder()
        else:
            print("Please try again!")
    def encoder(self):
        book = input("Enter text file to use as key:")
