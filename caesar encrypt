//Enkriptimi me komenden caesar ne gjuhen programuese c++

#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;

//Krijojme nje funksioni me emrin enkriptimi me dy parametra

string enkriptimi(string teksti,int qelesi)
{
    string rezultati="";
    
    //Kalojm tek secili karakter i tekstit me nje for loop
    for(int i=0;i<teksti.length();i++)
    {
        //enkriptojme shkronjat e medha ku ne ASCII code fillojne nga 65
        if(isupper(teksti[i]))
           rezultati+= char(int(teksti[i]+qelesi-65)%26+65);
        
        //enkriptojme shkronjat e vogla qe ne ASCII fillojne nga 97
        else if(islower(teksti[i]))
           rezultati+=char(int(teksti[i]+qelesi-97)%26+97);
           
        //Ne rast se kemi numra apo simbole mbeten te njejta
        else if(teksti[i]<65)
           rezultati+=teksti[i];
           
        else
           rezultati+=" ";
     }
     return rezultati;
}
//Te dhenat qe merren nga klienti(perdoruesi)
int main()
{
    string teksti = "";
    cout<<"Shkruani tekstin  :   ";
    getline(cin,teksti);
    cout<<"Jepni qelesin  :  ";
    int qelesi;
    cin>>qelesi;
    cout<<"Encriptimi : "<<enkriptimi(teksti,qelesi)<<endl;
    system("pause");
    return 0;
 }

//Mbarimi i enkriptimit

//Dekriptimi me komanden caesar 







